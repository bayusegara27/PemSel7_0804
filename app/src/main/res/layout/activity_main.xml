<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:radius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/gradient_bg">

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selamat Datang!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login sebagai: user@example.com"
                android:textSize="14sp"
                android:textColor="#E8E8E8" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Menu Grid -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dashboard Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="16dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginBottom="24dp">

        <!-- Pizza Menu Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:radius="12dp">

            <Button
                android:id="@+id/btn_pizza_menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="🍕\nMenu Pizza"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="#FF6B35"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

        <!-- My Orders Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:radius="12dp">

            <Button
                android:id="@+id/btn_my_orders"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="📋\nPesanan Saya"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="#28A745"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

        <!-- Profile Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:radius="12dp">

            <Button
                android:id="@+id/btn_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="👤\nProfil"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="#6C757D"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

        <!-- Logout Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:radius="12dp">

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="🚪\nLogout"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:textColor="#DC3545"
                android:gravity="center" />

        </androidx.cardview.widget.CardView>

    </GridLayout>

    <!-- Footer Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat menikmati pengalaman berbelanja pizza terbaik!"
        android:textSize="14sp"
        android:textColor="#666"
        android:gravity="center"
        android:padding="16dp"
        android:layout_gravity="bottom" />

</LinearLayout>